public Integer nextPrime(Integer num) {
    Boolean primRes = false;
    if(num<0) num = 1;
    while(!primRes){
        num++;
        primRes = isPrime(num);
    }
    return num;
}

public Boolean isPrime(Integer num) {
    for(Integer i = 2; i < num; i++){
       if(Math.mod(num,i) == 0)
        return false;
    }
    return true;
}