public String changeTimeFormat(String strTime) {
    String strMin = strTime.substringAfter(':');
    Integer intHour = Integer.valueOf(strTime.substringBefore(':'));
    
    if(intHour == 12)
        return strTime + ' PM';
    if(intHour == 00)
        return (intHour + 12) + ':' + strMin + ' AM';
    if(intHour > 12)
        return (intHour - 12).format().leftPad(2,'0') + ':' + strMin + ' PM';
    return strTime + ' AM';
}