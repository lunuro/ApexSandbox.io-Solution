public String changeTimeFormat(String strTime) {
    Integer intHour = Integer.valueOf(strTime.substringBefore(':'));
    if(intHour == 12)
        return strTime + ' PM';
    if(intHour == 0)
        return strTime.replaceFirst('00','12') + ' AM';
    if(intHour > 12)
        return strTime.replaceFirst(intHour, (intHour - 12).format().leftPad(2,'0')) + ' PM';
    return strTime + ' AM';
}