public void createCourseAndClass(String name, String description) {
    apxio__Course__c cou = new apxio__Course__c();
    cou.Name = name;
    cou.apxio__Course_Details__c = description;
    insert cou;

    apxio__Class__c cls = new apxio__Class__c ();
    cls.Name = name;
    cls.apxio__Description__c = description.length() > 255 ? description.substring(0,254) : description;
    cls.apxio__Course__c = coud.Id;
    insert cls;
}