public String reverseWordsInASentence(String sentence){
    if(String.isNull(sentence)) 
        return null;
    List<String> listWords = sentence?.split(' ');
    String revWords = '';
    for(Integer i=listWords.size()-1; i >= 0 ;i--){
        revWords += listWords[i] + ' ';
    }
    return revWords?.trim();
}